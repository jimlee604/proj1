<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<h3>Pokemon</h3>
<div class="column">
  <table class="table">
    <tbody>
      <% @trainer.pokemons.each do |pokemon| %>
      <tr>
        <%= pokemon.name %> lv: <%= pokemon.level %> hp: <%= pokemon.health %>  <%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %>
         <br>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% if @trainer === current_trainer %>
  <%= button_to "Create Pokemon", newp_path(id: @trainer.id), :class => "button medium", :method => :patch %>
  <% end %>
</div>
